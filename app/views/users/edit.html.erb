<main>
    <p id="notice"></p>
      <div class="container">
        <div class="row">
          <div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">
            <h2>User info</h2>
              <%= form_with model: @user, local:true do |f| %>
                <label>Name</label>
                 <%= f.text_field :name, class: "form-control" %>
                 <label>Image</label>
                 <input class="form-control-file user_image" data-reference="0d51371edc108d9b4703af9ea9c6e53b" include_hidden="false" type="file" name="user[profile_image]" id="user_profile_image">
                 <label>Introduction</label>
                 <%= f.text_area :introduction, class: "form-control" %>
                <div class="button"><%= f.submit 'Update User', class: "btn btn-secondary"%></div>
              <% end %>
          </div>
        </div>
      </div>
  </main>










