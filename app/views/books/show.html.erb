<main>
  <p id="notice"></p>
  <div class="container px-5 px-sm-0">
    <div class="row">
      <div class="col-md-3">
        <%= render 'books/list', new_book: @new_book, user: @book.user %>
      </div>
      <div class="col-md-8 offset-md-1">
        <h2>Book detail</h2>
        <table class="table">
          <tbody>
              <tr>
                <td>
                  <%= link_to user_path(@book.user.id) do %>
                  <%= attachment_image_tag @book.user, :profile_image_id, :fill, 60, 60, fallback: "no_image_2.jpg" %>
                  <% end %>
                  <div><%= link_to @book.user.name, user_path(@book.user.id) %></div>
                </td>
                <td><%= link_to @book.title, book_path(@book.id)%></td>
                <td><%= @book.body %></td>
                <td><%= link_to "Edit", edit_book_path(@book.id), class: 'btn btn-sm btn-success edit_book_4080' %></td>
                <td>
                  <%= link_to "Destroy", book_path(@book.id), method: :delete, class: 'btn btn-sm btn-danger destroy_book_4080' ,"data-confirm" => "本当に消しますか？"%>
                </td>
              </tr>
          </tbody>
        </table>
      </div>
    </div>
  </div>
</main>

